# Variables d'environnement pour Docker Compose
# Copier ce fichier vers .env et personnaliser les valeurs

# === SÉCURITÉ ===
SECURITY_ENABLED=true
SECURITY_USER_NAME=admin
SECURITY_USER_PASSWORD=changeme  # ⚠️ CHANGER EN PRODUCTION

# === BASE DE DONNÉES ===
DATABASE_PASSWORD=root  # ⚠️ CHANGER EN PRODUCTION

# === LOGS ===
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=WARN

# === JPA ===
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_FORMAT_SQL=false

# === ACTUATOR ===
ACTUATOR_SHOW_DETAILS=when-authorized
